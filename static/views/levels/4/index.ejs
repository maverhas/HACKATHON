            nav ul {
                list-style-type: none;
                padding: 0;
            }
    
            nav ul li {
                display: inline;
                margin-right: 20px;
            }
    
            nav ul li a {
                color: #fff;
                text-decoration: none;
            }
    
            main {
                padding: 20px;
            }
    
            section {
                margin-bottom: 40px;
            }
    
            section h2 {
