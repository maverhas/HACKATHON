<html lang="en">
    <%- include('../../includes/head.ejs', { 'styles': ['../../../styles/header.css', '../../../styles/main.css'] }) %>
        
        <style>
            .container {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
            .header {
                display: flex;
                justify-content: center;
            }
            .code {
                opacity: 0;
                display: flex;
                font-size: 30px;
                justify-content: center;
                align-items: center;
            }
        .title {
            justify-content: center;
            align-items: center;
            display: flex;
        }
        </style>
        <body>
            <%- include('../../includes/navbar.ejs') %>
            <H1 class="title">Jouons sérieusement !</H1>
            <div class="container">
                <p class="code" style="margin-bottom: 10px;">....</p>
                <p class="code"style="margin-bottom: 10px;">0</p>
                <p class="code"style="margin-bottom: 10px;">.-.-</p>
                <p class="code"style="margin-bottom: 10px;">-..</p>
                <button id="clickButton" style="width: 100px;height: 100px;"> Cliquez rapidement !</button>
            </div>
            <p class="code">Quelque chose apparaît... :o</p>
            <script>
                setInterval(decrease, 125)
                let opacityUpdated = 0
                let element = document.getElementsByClassName("code")
                let clickButton = document.getElementById("clickButton")
                
                clickButton.addEventListener("click", function(){
                    console.log("fdsv")
                    if (opacityUpdated >= 1) {
                        return
                    }else {
        
                        opacityUpdated += 0.1   
                        for (let i = 0; i < element.length; i++){
                            element[i].style.opacity = opacityUpdated
                        }
                    }
                })
                function decrease(){
                    
                    console.log(opacityUpdated)
                    if (opacityUpdated <= 0) {
                        return
                    }else {
                        opacityUpdated -= 0.1
                        
                        for (let i = 0; i < element.length; i++){
                            element[i].style.opacity = opacityUpdated
                        }
                    }
                }
                
                
            </script>
        </body>
</html>




