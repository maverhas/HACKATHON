<html lang="en">
    <%- include('includes/head.ejs', { 'styles': ['styles/header.css', 'styles/main.css', 'styles/leaderboard.css'] }) %>
    <body>
        <%- include('includes/navbar.ejs') %>
        <style>
            /* .Header {
                display: flex;
