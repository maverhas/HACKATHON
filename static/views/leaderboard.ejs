<html lang="en">
    <%- include('includes/head.ejs', { 'styles': ['styles/header.css', 'styles/main.css'] }) %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <body>
        <%- include('includes/navbar.ejs') %>
        <style>
            .Header {
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .data {
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .podium {
                display: flex;
                flex-direction: row;
                justify-content: center;
                align-items: center;
            }
            #podium0{
                position: relative;
                bottom: 0;
                background-color: gold;
                margin: 2px;
                width: 100px;
                height: 200px;
                border-radius: 5px;
                border-color: black;
                
            }
            #podium1{
                position: relative;
                bottom: 0;
                background-color: brown;
                margin: 2px;
                width: 100px;
                height: 150px;
                border-radius: 5px;
                border-color: black;
            }
            #podium2{
                position: relative;
                bottom: 0;
                background-color: gray;
                margin: 2px;
                width: 100px;
                height: 100px;
                border-radius: 5px;
                border-color: black;
            }

            #podium0, #podium1, #podium2 {
                align-self: flex-end; /* Aligner chaque élément en bas */
            }


            
        </style> 
        <main>
            <h1 class="Header">Leaderboard</h1>
            <div class="podium">
                <div id='podium2'>
                    <p class="data">3 <%= user[2].username%></p>
                    <p class="data"><%=user[2].HighestScore%></p>
                </div>
                <div id='podium0'>
                    <p class="data">1 <%= user[0].username%></p>
                    <p class="data"><%=user[0].HighestScore%></p>
                </div>
                <div id='podium1'>
                    <p class="data">2 <%= user[1].username%></p>
                    <p class="data"><%=user[1].HighestScore%></p>
                </div>
            </div>
            
            
        </main>
    </body>
</html>